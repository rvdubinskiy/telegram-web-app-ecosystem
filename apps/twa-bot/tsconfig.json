{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "incremental": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "ES6",
    "stripInternal": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "./",
    "outDir": "./build",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
